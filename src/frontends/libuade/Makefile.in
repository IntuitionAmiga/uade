LIBDIR = {PACKAGEPREFIX}{LIBDIR}
INCLUDEDIR = {PACKAGEPREFIX}{INCLUDEDIR}

AR = {AR}
CC = {CC}
CFLAGS = -Wall -O2 -I../include -I../common -fPIC -shared {DEBUGFLAGS} {ARCHFLAGS}
CLIBS = {ARCHLIBS} -lm

all:	libuade.so libuade.a

include ../common/Makefile.common

libuade.so:	$(COMMONMODULES)
	$(CC) -Wl,-soname,$@ -shared -o $@ $(CLIBS) $(COMMONMODULES)

libuade.a:	$(COMMONMODULES)
	$(AR) rcs $@ $(COMMONMODULES)

install:	libuade.so
	mkdir -p "$(INCLUDEDIR)"/uade "$(LIBDIR)"
	install -m 644 $< "$(LIBDIR)"/
	install -m 644 ../include/uade/*.h "$(INCLUDEDIR)"/uade/

clean:	
	rm -f *.o *.so *.a
