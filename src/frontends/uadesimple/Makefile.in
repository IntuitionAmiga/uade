
CC = {CC}
CFLAGS = -Wall -O2 -I../../include -I../common {AOFLAGS} {DEBUGFLAGS} {ARCHFLAGS}
CLIBS = {AOLIBS} {ARCHLIBS} -lm
MODULES = uadesimple.o strlrep.o unixatomic.o uadeipc.o amifilemagic.o \
	eagleplayer.o effects.o \
	playloop.o audio.o uadecontrol.o uadeconf.o md5.o \
	ossupport.o songdb.o songinfo.o vplist.o support.o
PLAYERHEADERS = ../common/eagleplayer.h ../common/uadeconf.h ../common/uadeconfstructure.h ../../include/uadeconfig.h

uadesimple:	$(MODULES)
	$(CC) $(CFLAGS) -o $@ $(MODULES) $(CLIBS)

clean:	
	rm -f uadesimple *.o

audio.o:	audio.c audio.h
	$(CC) $(CFLAGS) -c $<

chrarray.o:	chrarray.c chrarray.h
	$(CC) $(CFLAGS) -c $<

playlist.o:	playlist.c playlist.h uadesimple.h ../../include/uadeconfig.h
	$(CC) $(CFLAGS) -c $<

playloop.o:	playloop.c playloop.h uadesimple.h ../common/uadecontrol.h ../../include/uadeipc.h ../common/songinfo.h $(PLAYERHEADERS)
	$(CC) $(CFLAGS) -c $<

terminal.o:	terminal.c terminal.h
	$(CC) $(CFLAGS) -c $<

uadesimple.o:	uadesimple.c uadesimple.h ../../include/uadeipc.h ../../include/amigafilter.h ../common/amifilemagic.h ../common/uadecontrol.h $(PLAYERHEADERS)
	$(CC) $(CFLAGS) -c $<

include ../common/Makefile.common
