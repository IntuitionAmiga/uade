CC = {CC}
CFLAGS = -Wall -O2 -I{INCLUDEDIR} {DEBUGFLAGS} {ARCHFLAGS}
CLIBS = {AOLIBS} {ARCHLIBS} -lm -luade
LDFLAGS = -L{LIBDIR} -Wl,-rpath,{LIBDIR}

all:	uadesimple

MODULES = uadesimple.o audio.o

uadesimple:	$(MODULES)
	$(CC) $(LDFLAGS) -o $@ $(MODULES) $(CLIBS)

clean:	
	rm -f uadesimple *.o

%.o:	%.c
	$(CC) $(CFLAGS) -c $<

audio.o:	audio.c audio.h
uadesimple.o:	uadesimple.c
