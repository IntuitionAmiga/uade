BINDIR = {PACKAGEPREFIX}{BINDIR}
XMMSPLUGINDIR= {PACKAGEPREFIX}{XMMSPLUGINDIR}

ARCHFLAGS={ARCHFLAGS}
CC={CC}
OBJCOPY={OBJCOPY}
DEBUGFLAGS={DEBUGFLAGS}
XMMSFLAGS={XMMSFLAGS}
XMMSLIBS={XMMSLIBS}
SHAREDLIBRARYFLAGS={SHAREDLIBRARYFLAGS}
CFLAGS = -Wall -O2 $(SHAREDLIBRARYFLAGS) $(DEBUGFLAGS) $(XMMSFLAGS) $(ARCHFLAGS) -I../common -I../../include
CLIBS = $(XMMSLIBS) -lm
MODULES = plugin.o amifilemagic.o eagleplayer.o strlrep.o uadecontrol.o \
	uadeipc.o unixatomic.o subsongseek.o effects.o uadeconf.o md5.o \
	ossupport.o fileinfo.o songdb.o songinfo.o vplist.o support.o
PLAYERHEADERS = ../common/eagleplayer.h ../common/uadeconf.h ../common/uadeconfstructure.h ../common/uadestate.h ../common/support.h ../../include/uadeconfig.h

libuade2.so:	$(MODULES)
	$(CC) $(CFLAGS) -o $@ $(MODULES) $(CLIBS)
	$(OBJCOPY) -G get_iplugin_info $@

install:	libuade2.so
	mkdir -p "$(XMMSPLUGINDIR)" "$(BINDIR)"
	install libuade2.so "$(XMMSPLUGINDIR)"
	install uadexmmsadd "$(BINDIR)"/

fileinfo.o:	fileinfo.c fileinfo.h
	$(CC) $(CFLAGS) -c $<

plugin.o:	plugin.c plugin.h subsongseek.h fileinfo.h  ../common/uadecontrol.h ../../include/uadeipc.h ../../include/uadeconstants.h subsongseek.h ../common/effects.h ../common/md5.h $(PLAYERHEADERS)
	$(CC) $(CFLAGS) -c $<

subsongseek.o:	subsongseek.c subsongseek.h plugin.h
	$(CC) $(CFLAGS) -c $<

include ../common/Makefile.common

clean:	
	rm -f *.so *.o
